{
  "Logging": {
    "LogLevel": {
      "Default": "Debug",
      "Microsoft.AspNetCore": "Debug",
      "TaskMasterPro": "Debug",
      "MultiTenant.Enforcer": "Debug"
    }
  },
  "Serilog": {
    "MinimumLevel": {
      "Default": "Debug",
      "Override": {
        "Microsoft": "Information",
        "Microsoft.AspNetCore": "Debug",
        "Microsoft.EntityFrameworkCore": "Information",
        "System": "Information",
        "TaskMasterPro": "Debug",
        "MultiTenant.Enforcer": "Debug"
      }
    },
    "WriteTo": [
      {
        "Name": "Console",
        "Args": {
          "outputTemplate": "[{Timestamp:HH:mm:ss} {Level:u3}] {SourceContext}: {Message:lj}{NewLine}{Exception}"
        }
      },
      {
        "Name": "File",
        "Args": {
          "path": "logs/taskmasterpro-api-dev-.txt",
          "rollingInterval": "Day",
          "outputTemplate": "{Timestamp:yyyy-MM-dd HH:mm:ss.fff zzz} [{Level:u3}] {SourceContext}: {Message:lj}{NewLine}{Exception}"
        }
      }
    ],
    "Enrich": [
      "FromLogContext",
      "WithThreadId",
      "WithMachineName"
    ]
  },
  "ConnectionStrings": {
    "DefaultConnection": "Data Source=taskmaster.db"
  },
  "Authentication": {
    "Schemes": {
      "Bearer": {
        "ValidAudiences": [
          "http://localhost:5266",
          "https://localhost:7058"
        ],
        "ValidIssuer": "dotnet-user-jwts"
      }
    }
  },
  "MultiTenant": {
    "EnableViolationLogging": true,
    "EnablePerformanceMonitoring": true
  },
  "Database": {
    "CommandTimeout": 30
  }
}